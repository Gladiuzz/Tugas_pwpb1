<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:padding="30dp">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/profile_photo" />

        <TextView
            android:id="@+id/labelNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgProfile"
            android:text="Syarif Hidayatulloh"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/labelUsia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelNama"
            android:layout_marginVertical="10dp"
            android:layout_toRightOf="@id/imgProfile"
            android:text="17 Years Old"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/labelAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelUsia"
            android:layout_toRightOf="@id/imgAlamat"
            android:text="Bandung, Jawa Barat"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ImageView
            android:id="@+id/imgAlamat"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/labelUsia"
            android:layout_toRightOf="@id/imgProfile"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_location_on_black_24dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TextView
            android:id="@+id/labelInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Personal Info"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/labelInfo"
            android:orientation="vertical"
            android:layout_margin="30dp">
            <LinearLayout
                style="@style/linearInfo">
                <ImageView
                    style="@style/iconInfo"
                    android:src="@drawable/ic_school_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="SMK Negeri 4 Bandung"/>
            </LinearLayout>
            <LinearLayout
                style="@style/linearInfo">
                <ImageView
                    style="@style/iconInfo"
                    android:src="@drawable/ic_email_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="syarif040802@gmail.com"/>
            </LinearLayout>
            <LinearLayout
                style="@style/linearInfo">
                <ImageView
                    style="@style/iconInfo"
                    android:src="@drawable/ic_phone_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="+62 895-4642-3981"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TextView
            android:id="@+id/labelSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Skill"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/labelSkill">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2.5dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/layoutSkill1"
                    style="@style/LinearCard">

                    <ImageView
                        android:id="@+id/imgSkill1"
                        style="@style/imageViewSkill"
                        android:src="@drawable/java_logo" />

                    <TextView
                        android:id="@+id/labelSkill1"
                        style="@style/txtViewSkill"
                        android:text="Java" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSkill2"
                    style="@style/LinearCard">

                    <ImageView
                        android:id="@+id/imgSkill2"
                        style="@style/imageViewSkill"
                        android:src="@drawable/php_logo" />

                    <TextView
                        android:id="@+id/labelSkill2"
                        style="@style/txtViewSkill"
                        android:text="PHP"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSkill3"
                    style="@style/LinearCard">

                    <ImageView
                        android:id="@+id/imgSkill3"
                        style="@style/imageViewSkill"
                        android:src="@drawable/laravel_logo" />

                    <TextView
                        android:id="@+id/labelSkill3"
                        style="@style/txtViewSkill"
                        android:text="Laravel" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSkill4"
                    style="@style/LinearCard">

                    <ImageView
                        android:id="@+id/imgSkill4"
                        style="@style/imageViewSkill"
                        android:src="@drawable/github_logo" />

                    <TextView
                        android:id="@+id/labelSkill4"
                        style="@style/txtViewSkill"
                        android:text="Github" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSkill5"
                    style="@style/LinearCard">

                    <ImageView
                        android:id="@+id/imgSkill5"
                        style="@style/imageViewSkill"
                        android:src="@drawable/mysql_logo" />

                    <TextView
                        android:id="@+id/labelSkill5"
                        style="@style/txtViewSkill"
                        android:text="MySQL" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</LinearLayout>